<h1>Dashboard</h1>
<section id="currentUploadUpdate">
  <section class="card">
      <div class="card-body">
        <h3 class="card-title">{{hbsUpload.title}}</h3> 
        <h5>Posted on {{hbsUpload.createdAt}}</h5>
        <p class="card-text">{{hbsUpload.content}}</p>
    </div>
  </section>
</section>

<section id="editUpload" class="card text-center">
  <div class="card-body">
  <h3 class="card-title">Edit Post</h3>
  <form id="editedUpload">
    <div class="card-text"></div>
      <label for="editedTitle">Title</label><br>
      <input type="text" id="editedTitle" placeholder="{{hbsUpload.title}}" value="{{hbsUpload.title}}">
    </div>
    <div class="card-text"></div>
      <label for="editedContent">Content</label>
    <textarea id="editedContent">{{hbsUpload.content}}</textarea>
    <input id="hiddenUploadId" hidden="true" value="{{hbsUpload.id}}"></input>
    </div>
    <button id="update">Update Post</button>
    <button id="delete">Delete Post</button>
</form>
</div>
</section>

<script src="/js/updateDelete.js"></script>